{%- liquid
  assign all_cards = 'all'

-%}
<script defer src="{{ 'script.js' | asset_url  }}"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
{{ 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' | stylesheet_tag }}
{{ 'style.css' | asset_url | stylesheet_tag }}

<div style="width:100%;display:flex">
  <div style="width:80%">
    <ul
      id="product-gridWhislist"
      data-id="{{ section.id }}"
      style="display:flex;justify-content: center; flex-wrap: wrap">
      {%- for product in collections[all_cards].products -%}
        <div>
          {% render 'card-whislist', card_product: product %}
        </div>
      {% endfor %}
    </ul>
  </div>
  <div class="column-right">
    <button id="gotoFavorite" class="btn-move-page">Ir a mi lista de deseos</button>
  </div>

</div>