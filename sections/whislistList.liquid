{%- liquid
  assign all_cards = 'all'

-%}
<script defer src="{{ 'script.js' | asset_url  }}"></script>
{{ 'style.css' | asset_url | stylesheet_tag }}
{{ 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' | stylesheet_tag }}
<div class="none my-5" id="deseos">
  <div style="width:100%;display:flex ">

    <div style="width:80%">
      <div id="avisonoproducts" class="none textoEmpty">No tienes productos agragadosa tu Whislist...</div>
      <ul
        id="product-gridFavoritelist"

        data-id="{{ section.id }}"
        style="display:flex;justify-content: center; flex-wrap: wrap">
        {%- for product in collections[all_cards].products -%}
          <div id="favorite-{{product.id}}" value="{{product.id}}">
            {% render 'card-favoriteList', card_product: product %}
          </div>
        {% endfor %}
      </ul>
    </div>
    <div class="column-right">
      <button class="btn-move-page" id="goto-List-products">Volver a mis productos</button>


    </div>
    {% render 'modal-compras' %}
  </div>
</div>