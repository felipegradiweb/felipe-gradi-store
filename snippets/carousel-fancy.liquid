<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script defer src="{{ 'script.js' | asset_url  }}"></script>
{{ 'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' | stylesheet_tag }}
<!-- Carousel wrapper -->
<div
  id="carouselExampleIndicators"
  class="carousel slide"
  data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide-to="0"
      class="active"
      aria-current="true"
      aria-label="Slide 1"></button>
    <button
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide-to="1"
      aria-label="Slide 2"></button>

  </div>
  <div class="carousel-inner" style="height:35rem">
    <div class="carousel-item active ">
      <div class="d-flex w-100">
        <div class="w-50">
          <img
            src="https://colorlib.com/wp-content/uploads/sites/2/free-shopify-themes.jpg"
            class="d-block w-100"
            alt="..."></div>
        <div class="w-50 d-flex" style="background-color: #000;">
          <span
            class="m-auto"
            style="color: #ffff;font-size:2rem"
            id="totalproducts"></span>
        </div>
      </div>

    </div>
    <div class="carousel-item ">
      <div class="d-flex w-100">
        <div class="w-50 d-flex"><img
            src="https://youthventuresnl.com/wp-content/uploads/2016/04/shopify.jpg"
            class="d-block w-100"
            alt="..."></div>
        <div class="w-50 d-flex " style="background-color: #96BF48;">
          <span
            class="m-auto"
            style="color: #000;font-size:2rem"
            id="totalcustomers"></span>
        </div>
      </div>
    </div>

  </div>
  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#carouselExampleIndicators"
    data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#carouselExampleIndicators"
    data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>